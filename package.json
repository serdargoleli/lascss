{
  "name": "las-css",
  "version": "1.0.5",
  "description": "LAS CSS, Lightweight, modern, utility-first CSS framework built with SCSS for fast, responsive, and maintainable web design. Ideal for building responsive layouts without JavaScript.",
  "main": "dist/style.css",
  "style": "dist/style.css",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./dist/style.css",
      "require": "./dist/style.css",
      "default": "./dist/style.css"
    },
    "./style.min.css": "./dist/style.min.css",
    "./src/*": "./src/*",
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "index.d.ts",
    "README.md",
    "LICENSE"
  ],
  "type": "commonjs",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:css && npm run build:minify && npm run copy:assets",
    "build:css": "sass src/main.scss dist/style.css --style expanded --no-source-map",
    "build:minify": "sass src/main.scss dist/style.min.css --style compressed --no-source-map",
    "copy:assets": "cp README.md dist/ && cp LICENSE dist/",
    "clean": "rm -rf dist && mkdir -p dist",
    "watch": "sass --watch src/main.scss dist/style.css --style expanded",
    "dev": "npm run watch"
  },
  "keywords": [
    "css",
    "scss",
    "utility-first",
    "responsive",
    "modern-css-framework",
    "web-design",
    "frontend-framework",
    "lightweight-css",
    "modular-css",
    "maintainable-css",
    "flexbox",
    "grid",
    "las-css"
  ],
  "author": "Serdar GOLELI",
  "license": "MIT",
  "devDependencies": {
    "sass": "^1.94.0"
  },
  "homepage": "https://github.com/serdargoleli/las-ui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/serdargoleli/las-ui.git"
  },
  "bugs": {
    "url": "https://github.com/serdargoleli/las-ui/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
